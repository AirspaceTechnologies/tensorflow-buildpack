#!/bin/bash

echo "-----> Starting tensorflow install.."

BUILD_DIR="$1"
TF_URL="https://storage.googleapis.com/tensorflow/libtensorflow/libtensorflow-cpu-linux-x86_64-1.8.0.tar.gz"

# download / install
mkdir $BUILD_DIR/third-party
curl -L $TF_URL | tar -xz -C $BUILD_DIR/third-party

# setup env
ln -sfn $BUILD_DIR/third-party /app/third-party

echo "        Done!"
